<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nearix HR</title>

    <link href="~/Scripts/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light empl-nav-bg">
            <span class="navbar-brand">Nearix | Employees</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-items" aria-controls="nav-items" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-items">
                <div class="navbar-nav">
                    <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-link nav-item" asp-area="" asp-action="Import">Import</a>
                </div>
            </div>

        </nav>
    </header>
    <div class="empl-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container"> &copy; 2020 - Nearix.HR.Web </div>
    </footer>
    <script src="~/Scripts/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/lib/underscore/underscore.min.js"></script>
    <script src="~/Scripts/js/nearixhr.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        var app = new Nearix.Application();
    });
</script>